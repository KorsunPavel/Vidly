@model Vidly.ViewModels.MovieList
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table  class="table  table-­‐bordered  table-­‐hover">
    <thead>
        <tr>
            <th>@ViewBag.Title</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var movie in Model.Movies)
        {
            <tr>
                <td>@movie.Name</td>
                <td>@movie.Genre.Name</td>
            </tr>
        }
    </tbody>
</table>


